<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/eventTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/lavender"
        app:tabSelectedTextColor="@color/lavender"
        app:tabTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ViewPager2 (Etkinlik içeriği) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/eventViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/eventTabLayout"
        app:layout_constraintBottom_toTopOf="@id/eventSettingsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ayarlar ve Silme Butonları -->
    <LinearLayout
        android:id="@+id/eventSettingsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/addEventButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Event"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/editFestivalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Festival"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/deleteFestivalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Festival"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
